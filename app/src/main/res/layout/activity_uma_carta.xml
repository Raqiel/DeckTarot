<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UmaCarta">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:background="@drawable/card_background"
        app:layout_constraintBottom_toTopOf="@id/button_voltar_taça_uma_carta"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nome_carta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/green02"
            android:text="teste"/>

        <ImageView
            android:id="@+id/imagem_carta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_love"/>

        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:text="Texto de teste"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_voltar_taça_uma_carta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0F254A"
        android:text="@string/voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="631dp" />

    <Button
        android:id="@+id/button_embaralhar_taça_um"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Embaralhar"
        app:layout_constraintTop_toBottomOf="@id/button_voltar_taça_uma_carta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>