<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DuasCartas">

    <Button
        android:id="@+id/button_voltar_taça_duas_cartas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#0F254A"
        android:text="@string/voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_embaralhar_taca_dois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#0F254A"
        android:text="embaralhar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/primeira_carta_taca_dois"
        android:layout_width="186dp"
        android:layout_height="381dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_voltar_taça_duas_cartas"
        app:layout_constraintEnd_toStartOf="@+id/segunda_carta_taca_dois"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_estrela" />

    <ImageView
        android:id="@+id/segunda_carta_taca_dois"
        android:layout_width="185dp"
        android:layout_height="379dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_voltar_taça_duas_cartas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a_estrela" />
</androidx.constraintlayout.widget.ConstraintLayout>