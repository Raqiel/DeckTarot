<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TresCartas">

    <GridLayout
        android:id="@+id/grid_layout_tres_cartas"
        android:layout_width="371dp"
        android:layout_height="468dp"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/primeira_carta_taca_tres"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="16dp"
            android:src="@drawable/a_estrela">


        </ImageView>

        <ImageView
            android:id="@+id/segunda_carta_taca_tres"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="16dp"
            android:src="@drawable/a_estrela">


        </ImageView>

        <ImageView
            android:id="@+id/terceira_carta_taca_tres"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="16dp"
            android:src="@drawable/a_estrela">


        </ImageView>




    </GridLayout>

    <Button
        android:id="@+id/button_voltar_taÃ§a_tres_cartas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:backgroundTint="#0F254A"
        android:text="@string/voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout_tres_cartas"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>